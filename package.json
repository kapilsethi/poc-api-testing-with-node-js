{
  "name": "poc-api-testing-with-node-js",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "echo 'lint checks...' && ./node_modules/.bin/eslint --ignore-path .gitignore '*/**/*.ts'",
    "test:mock": "TEST_ENV=mock jest --config ./jest-e2e.json --testPathIgnorePatterns=/test/prod-only-tests/",
    "test:prod": "TEST_ENV=prod jest --config ./jest-e2e.json",
    "start:mock:server": "cd ./scripts && docker-compose -f wiremock-docker-compose.yml up --detach",
    "stop:mock:server": "cd ./scripts && docker-compose -f wiremock-docker-compose.yml down",
    "generate:report": "open ./test-results/test-execution-report.html"
  },
  "pre-commit": [
    "lint"
  ],
  "keywords": [],
  "author": "Kapil Sethi",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "29.5.12",
    "@types/request-promise": "4.1.46",
    "@typescript-eslint/eslint-plugin": "7.5.0",
    "@typescript-eslint/parser": "7.5.0",
    "axios": "1.6.8",
    "dotenv": "16.4.5",
    "eslint": "8.57.0",
    "jest": "29.7.0",
    "jest-html-reporters": "3.1.7",
    "moment": "2.30.1",
    "pre-commit": "1.2.2",
    "ts-jest": "29.1.2",
    "ts-node": "10.2.1",
    "typescript": "5.4.3"
  }
}
